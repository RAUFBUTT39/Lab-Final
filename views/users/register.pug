extends ../layout

block content
  h1 Sign Up
  form(action="/register",method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", class="form-control", name="name")
        .form-group
            label(for="email") email
            input#email(type="text", class="form-control", name="email")
        .form-group
            label(for="password") password
            input#price(type="password", class="form-control", name="password")
        input(type="submit", class="btn btn-success" value="Register Account")
